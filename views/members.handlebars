				{{#each Topics}}
									
					{{#unless this.dataValues.t_condition}}
						<li>
							<h5>{{this.dataValues.id}}.{{this.dataValues.topic_name}}
									<button type='submit' id={{this.dataValues.id}} class="eat-burger-btn btn btn-danger" data-id="{{this.dataValues.id}}">DEVOUR!</button>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-5">
			<h3>ACTIVITIES:</h3>
			<ul>
				{{#each Activities}}
					{{#unless this.dataValues.a_condition}}
						<li>
							<h5>{{this.dataValues.id}}.{{this.dataValues.activity_name}}
									<button type='submit' id={{this.dataValues.id}} class="eat-burger-btn btn btn-danger" data-id="{{this.dataValues.id}}">DEVOUR!</button>
							</h5>
						
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
